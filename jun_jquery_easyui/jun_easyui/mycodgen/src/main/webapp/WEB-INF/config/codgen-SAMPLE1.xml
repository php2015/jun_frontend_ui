<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE codgen-config PUBLIC "-//Apache Software Foundation//DTD Tengen Configuration 1.0//EN" "com/bcs/codgen/resources/codgen-config_1_0.dtd">
<codgen-config>
	<project name="codgen-sample1" label="示例应用1" outputEncoding="UTF-8" isDefault="true">
		<dbProvider class="com.bcs.codgen.service.impl.MysqlProvider">
			<jdbcConfig>
				<driver>com.mysql.jdbc.Driver</driver>
				<url>jdbc:mysql://localhost:3306/sample?useUnicode=true&amp;characterEncoding=UTF-8</url>
				<user>root</user>
				<password>123</password>
			</jdbcConfig>
			<columnHandler class="com.bcs.codgen.service.impl.DataTypeConverterForJava"/>
			<!-- 不使用系统默认的空格分隔符（要使用则去掉下面这行配置，当然可以设置其他分隔符来覆盖默认的空格分隔符） -->
			<splitorForLabelFromComment></splitorForLabelFromComment>
		</dbProvider>
		<!-- 自定义的构建配置处理器，可以在配置信息初始化、获取数据模型前后、获取输出模型前后时进行定制处理 -->
		<buildConfigHandler class="buildConfigHandler.SampleBuildConfigHandler" />
			
		<dataModel name="templateDirectory">template/SAMPLE</dataModel>
		<dataModel name="outputDirectory">/mycodgen/${copyright.author}/${projectName}</dataModel>
		<dataModel name="NamespaceProject">com.bcs.simple1</dataModel>
		<dataModel name="NamespaceDomain" >${NamespaceProject}.domain.${groupName}</dataModel>
		<dataModel name="NamespaceParam" >${NamespaceProject}.param.${groupName}</dataModel>
		<dataModel name="NamespaceDao">${NamespaceProject}.dao.${groupName}</dataModel>
		<dataModel name="NamespaceService">${NamespaceProject}.service.${groupName}</dataModel>
		<dataModel name="NamespaceServiceImpl">${NamespaceProject}.service.${groupName}</dataModel>
		
		<output name="domain" type="file">
			sample1-domain/src/main/java/${NamespaceDomain?replace(".","/")}/${moduleName?cap_first}.java
		</output>
		<output name="param" type="file">
			sample1-domain/src/main/java/${NamespaceParam?replace(".","/")}/${moduleName?cap_first}Param.java
		</output>
		<output name="daoxml" type="file">
			sample1-service/src/main/resources/mybatis/${groupName}/${moduleName?cap_first}DAO.xml
		</output>
		<output name="domainEx" type="file">
			sample1-domain/src/main/java/${NamespaceDomain?replace(".","/")}/${moduleName?cap_first}Ex.java
		</output>
		<output name="paramEx" type="file">
			sample1-domain/src/main/java/${NamespaceParam?replace(".","/")}/${moduleName?cap_first}ParamEx.java
		</output>
		<output name="daoxmlEx" type="file">
			sample1-service/src/main/resources/mybatis/${groupName}/${moduleName?cap_first}ExDAO.xml
		</output>
		<output name="dao" type="file">
			sample1-service/src/main/java/${NamespaceDao?replace(".","/")}/I${moduleName?cap_first}DAO.java
		</output>
		<output name="service" type="file">
			sample1-service/src/main/java/${NamespaceService?replace(".","/")}/I${moduleName?cap_first}Service.java
		</output>
		<output name="serviceImpl" type="file">
			sample1-service/src/main/java/${NamespaceServiceImpl?replace(".","/")}/${moduleName?cap_first}ServiceImpl.java
		</output>
	</project>
</codgen-config>